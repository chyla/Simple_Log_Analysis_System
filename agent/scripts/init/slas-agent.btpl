#! /bin/sh

### BEGIN INIT INFO
# Provides:       slas-agent
# Required-Start: $network $syslog
# Required-Stop:
# Should-Start:
# Default-Start:  2 3 4 5
# Default-Stop:   0 1 6
### END INIT INFO

# Based on skeleton by Miquel van Smoorenburg and Ian Murdock

PATH=/sbin:/bin:/usr/sbin:/usr/bin
DAEMON="%bindir%/slas-agent"
NAME=slas-agent
SNAME=slas-agent
DESC="SLAS agent service"
PIDFILE=`sed -n 's/pidfile=//p' %appconfdir%/agent.config`

. /lib/lsb/init-functions

test -f $DAEMON || exit 0

set -e

sleep_until_stop () {
	PID=`cat $PIDFILE`

	while [ `ps h $PID | wc -l` -eq 1 ] ; do
		sleep 1
	done
}

start_service () {
        start-stop-daemon --start --oknodo --pidfile $PIDFILE --exec $DAEMON
}

stop_service () {
        start-stop-daemon --stop --oknodo --pidfile $PIDFILE
        sleep_until_stop
}

case "$1" in
  start)
	echo -n "Starting $DESC: "
	start_service
	echo "$NAME."
	;;

  stop)
	echo -n "Stopping $DESC: "
	stop_service
	echo "$NAME."
	;;

  restart)
	echo -n "Restarting $DESC: "
	stop_service
	start_service
	echo "$NAME."
	;;

  status)
        status_of_proc -p $PATLMS_PIDFILE $DAEMON $NAME && exit 0 || exit $?
        ;;
  *)
	N=/etc/init.d/$SNAME
	echo "Usage: $N {start|stop|restart|status}" >&2
	exit 1
	;;
esac

exit 0
